<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <div>
        <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: '100x100' %>
        </div>
          <table class="table">
            <tbody>
              <tr><th>name</th><th><%= @user.name %></th></tr>
               <tr><th>introduction</th><th><%= @user.introduction %></th></tr>
            </tbody>
          </table>
          <div class="row">
            <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
          </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local:true do |f| %>
        <div class="form-group">
          <div class="field_with_errors">
            <label for="book_title">Title</lavel>
          </div>
          <div class="field_with_errors">
            <%= f.text_field :title %>
          </div>
        </div>
        <div class="form-group">
          <div class="field_with_errors">
            <lavel for=book_opinion>Opinion</lavel>
          </div>
          <div class="field_with_errors">
            <%= f.text_area :body %>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit "Create Book", class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user.id) do %>
                  <%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", size: '100x100' %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td>
                <%= book.body %>
              </td>
              <td>
                <p>コメント数: <%= book.book_comments.count %></p>
              </td>
            <tr>
          <% end %>
        <tbody>
      </table>
    </div>
  </div>
</div>