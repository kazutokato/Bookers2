

<%= render 'books/list' %>

<h2>Books</h2>
<p>Title</p>
<p>Opinion</p>
<% @books.each do |book| %>
<div>
  <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %>
  <%= link_to book_path(book.id) do %>
  <%= book.title %>
  <% end %>
  <p><%= book.body %></p>
</div>
<% end %>
