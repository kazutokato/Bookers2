
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <div>
        <%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: '100x100' %>
        </div>
          <table class="table">
            <tbody>
              <tr><th>name</th><th><%= user.name %></th></tr>
               <tr><th>introduction</th><th><%= user.introduction %></th></tr>
            </tbody>
          </table>
        <div class="row">
          <%= link_to edit_user_path(user) do %>
            <a class="btn btn-outline-secondary btn-block fas fa-user-cog"></a>
          <% end %>
        </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local:true do |f| %>
        <div class="form-group">
          <div class="field_with_errors">
            <label for="book_title">Title</lavel>
          </div>
          <div class="field_with_errors">
            <%= f.text_field :title %>
          </div>
        </div>
        <div class="form-group">
          <div class="field_with_errors">
            <lavel for=book_opinion>Opinion</lavel>
          </div>
          <div class="field_with_errors">
            <%= f.text_area :body %>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book' do %>
            <input class="btn btn-success"></a>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>