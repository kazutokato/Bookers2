<h2>User info</h2>

<div class="profile-container">
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
  <th class="profile-name">name</th>
  <%= @user.name %>
  <th class="profile-introduction">introduction</th>
  <%= @user.introduction %>
  <p><%= link_to "âš™", edit_user_path(@user) %></p>
</div>

<%= render 'books/list', user: @user %>

<h2>Books</h2>
<p>Title</p>
<p>Opinion</p>
<% @books.each do |book| %>
<div>
  <%= link_to user_path(book.user.id) do %>
    <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %>
  <% end %>
  <%= link_to book_path(book.id) do %>
    <%= book.title %>
  <% end %>
  <p><%= book.body %></p>
</div>
<% end %>