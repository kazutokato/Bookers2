<div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
          <div>
          <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: '100x100' %>
          </div>
            <table class="table">
              <tbody>
                <tr><th>name</th><th><%= @user.name %></th></tr>
                 <tr><th>introduction</th><th><%= @user.introduction %></th></tr>
              </tbody>
            </table>
            <div class="row">
              <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
                <i class="fas fa-user-cog"></i>
              <% end %>
            </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book_new, local:true do |f| %>
          <div class="form-group">
            <div class="field_with_errors">
              <label for="book_title">Title</lavel>
            </div>
            <div class="field_with_errors">
              <%= f.text_field :title %>
            </div>
          </div>
          <div class="form-group">
            <div class="field_with_errors">
              <lavel for=book_opinion>Opinion</lavel>
            </div>
            <div class="field_with_errors">
              <%= f.text_area :body %>
            </div>
          </div>
          <div class="form-group">
            <%= f.submit "Create Book", class:"btn btn-success" %>
          </div>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user.id) do %>
                  <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: '40x40' %><br>
                  <%= @user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book.id) do %>
                  <%= @book.title %>
                <% end %>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <td>
                <% if @user.id == current_user.id %>
                  <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %>
                <% end %>
              </td>
              <td>
                <% if @user.id == current_user.id %>
                  <%= link_to 'Destroy', book_path(@book.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
                <% end %>
              </td>
              <td>
              <% if @book.favorited_by?(current_user) %>
                <p>
                  <%= link_to book_favorites_path(@book), method: :delete do %>
                    ♥<%= @book.favorites.count %>
                  <% end %>
                </p>
                <% else %>
                <p>
                  <%= link_to book_favorites_path(@book), method: :post do %>
                    ♡<%= @book.favorites.count %>
                  <% end %>
                </p>
              <% end %>
              </td>
              <td>
                <p>コメント数 : <%= @book.book_comments.count %></p>
              </td>
            <tr>
          <tbody>
        </table>
        <table class="table">
          <tbody>
            <div class="comments">
              <% @book.book_comments.each do |book_comment| %>
                <tr>
                  <td>
                    <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: '40x40' %><br>
                    <%= book_comment.user.name %>
                  </td>
                  <td>
                    <%= book_comment.comment %>
                  </td>
                  <td>
                    <% if book_comment.user == current_user %>
                      <div class="comment-delete">
                        <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger" %>
                      </div>
                    <% end %>
                  </td>
                <tr>
              <% end %>
            </div>
          <tbody>
        </table>
        <div class="new-comment">
        <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
          <%= f.text_area :comment, size: "80x5" %>
          <%= f.submit "送信", class:"btn btn-sm btn-success" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
