<div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
          <div>
          <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
          </div>
            <table class="table">
              <tbody>
                <tr><th>name</th><th><%= @user.name %></th></tr>
                 <tr><th>introduction</th><th><%= @user.introduction %></th></tr>
              </tbody>
            </table>
            <div class="row">
              <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
                <i class="fas fa-user-cog"></i>
              <% end %>
            </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book, local:true do |f| %>
          <div class="form-group">
            <div class="field_with_errors">
              <label for="book_title">Title</lavel>
            </div>
            <div class="field_with_errors">
              <%= f.text_field :title %>
            </div>
          </div>
          <div class="form-group">
            <div class="field_with_errors">
              <lavel for=book_opinion>Opinion</lavel>
            </div>
            <div class="field_with_errors">
              <%= f.text_area :body %>
            </div>
          </div>
          <div class="form-group">
            <%= f.submit "Create Book", class:"btn btn-success" %>
          </div>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %><br>
                <%= @user.name %>
              </td>
              <td>
                <%= link_to book_path(@book.id) do %>
                  <%= @book.title %>
                <% end %>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <td>
                <% if @user.id == current_user.id %>
                  <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %>
                <% end %>
              </td>
              <td>
                <% if @user.id == current_user.id %>
                  <%= link_to "Destroy", book_path(@book.id), method: :delete, deta:{confirm:"本当に消しますか？"}, class:"btn btn-sm btn-danger" %>
                <% end %>
              </td>
            <tr>
          <tbody>
        </table>
      </div>
    </div>
  </div>
