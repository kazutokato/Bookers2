

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 col-px-5 col-sm-0">
      <h2>Sign up</h2>
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :postal_code %><br />
        <%= f.text_field :postal_code, autofocus: true, placeholder: '', class: "postal_code", id: "address_zipcode" %>
      </div>

      <div class="field">
        <%= f.label :prefecture_code %><br>
        <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name, class: "address", id: "address_prefecture_name" %>
      </div>

      <div class="field">
        <%= f.label :city %><br />
        <%= f.text_field :city, autofocus: true, placeholder: '', class: "address", id:"address_city" %>
      </div>

      <div class="field">
        <%= f.label :Street %><br />
        <%= f.text_field :building, autofocus: true, placeholder: '', class: "address", id: "address_street" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %></lavel><br />
        <%= f.password_field :password_confirmation, class:"password-confirm", autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class:"btn btn-sm btn-success" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
